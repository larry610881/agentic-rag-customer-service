# ==============================
# Agentic RAG Customer Service
# Backend Environment Variables
# ==============================

# --- Database (PostgreSQL) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_rag

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Qdrant ---
QDRANT_HOST=localhost
QDRANT_REST_PORT=6333
QDRANT_GRPC_PORT=6334

# --- JWT ---
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ==============================
# Provider API Keys
# (each provider needs only one key)
# ==============================

# OpenAI
OPENAI_API_KEY=sk-xxx

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxx

# Qwen (DashScope) — free tier available
QWEN_API_KEY=sk-xxx

# OpenRouter — multi-model gateway
OPENROUTER_API_KEY=sk-or-xxx

# Legacy (backwards compatible, prefer OPENAI_API_KEY instead)
# OPENAI_CHAT_API_KEY=sk-xxx

# ==============================
# Embedding Configuration
# ==============================

# Provider: fake | openai | qwen
EMBEDDING_PROVIDER=fake
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_VECTOR_SIZE=1536
# Override base URL (optional, auto-detected from provider)
# EMBEDDING_BASE_URL=https://api.openai.com/v1

# ==============================
# LLM Configuration
# ==============================

# Provider: fake | openai | anthropic | qwen | openrouter
LLM_PROVIDER=fake
# Model name (defaults per provider: openai=gpt-4o, anthropic=claude-sonnet-4-20250514, qwen=qwen-plus, openrouter=openai/gpt-4o)
LLM_MODEL=
LLM_MAX_TOKENS=1024
# Override base URL (optional, auto-detected from provider)
# LLM_BASE_URL=https://api.openai.com/v1

# --- Provider Quick-Start Examples ---
#
# OpenAI:
#   LLM_PROVIDER=openai
#   OPENAI_API_KEY=sk-xxx
#   LLM_MODEL=gpt-4o
#
# Anthropic:
#   LLM_PROVIDER=anthropic
#   ANTHROPIC_API_KEY=sk-ant-xxx
#   LLM_MODEL=claude-sonnet-4-20250514
#
# Qwen (free):
#   LLM_PROVIDER=qwen
#   QWEN_API_KEY=sk-xxx
#   LLM_MODEL=qwen-plus
#
# OpenRouter:
#   LLM_PROVIDER=openrouter
#   OPENROUTER_API_KEY=sk-or-xxx
#   LLM_MODEL=openai/gpt-4o

# ==============================
# RAG Configuration
# ==============================

RAG_SCORE_THRESHOLD=0.3
RAG_TOP_K=5

# ==============================
# LINE Bot
# ==============================

LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=
LINE_DEFAULT_TENANT_ID=
LINE_DEFAULT_KB_ID=

# ==============================
# LLM Pricing (JSON)
# ==============================

# Format: {"model_name": {"input": price_per_1m_tokens, "output": price_per_1m_tokens}}
LLM_PRICING_JSON={}

# ==============================
# App
# ==============================

APP_ENV=development
APP_VERSION=0.1.0
